<launch>
	<!-- Static TF publisher to ensure base -> laser_livox transform is available -->
	<!-- Adjust the transform if needed (x, y, z, roll, pitch, yaw, parent_frame, child_frame, rate) -->
	<node pkg="tf" type="static_transform_publisher" name="base_to_laser_livox" args="0 0 0 0 0 0 base laser_livox 100" />
	
	<!-- you can load an exisiting tree with <node ... args="tree.bt"> !-->
	<node pkg="octomap_server" type="octomap_tracking_server_node" name="octomap_listener" output="screen">
		<param name="resolution" value="0.05" />
		<!-- Use 'base' as the world frame (common choice for robot-centric mapping) -->
		<param name="frame_id" type="string" value="base" />
		<param name="sensor_model/max_range" value="4.0" />
		<param name="save_directory" value="$(optenv OCTOMAP_SAVE_DIR2 ./)" />
		<param name="track_changes" value="false"/>
		<param name="listen_changes" value="true"/>
		<param name="topic_changes" value="/octomap_tracking_server/changeset" />
		<remap from="cloud_in" to="/scan" />
	</node>
</launch>
